#include <stdio.h>
#include <string.h>

// 구조체선언
struct student
{
	// 구조체 멤버
	int number;
	char name[10];
	double grade;
}
s1;

int main(void)
{
	printf("학번: ");
	scanf_s("%d", &s1.number);
	
	printf("이름: ");
	scanf_s("%s", &s1.name, 10);
	
	printf("학점: ");
	scanf_s("%lf", &s1.grade);
	
	printf("학번: %d\n 이름 : %s\n학점 : %lf\n\n",s1.number, s1.name, s1.grade);
	
	return 0;

}
